<!DOCTYPE html>
<html>
<head>
    <title>@System.Configuration.ConfigurationManager.AppSettings["Application"]</title>
    <meta charset="utf-8" />
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="shortcut icon" type="image/x-icon" href="~/favicon.ico" />
    <link rel="icon" type="image/x-icon" href="~/favicon.ico" />
    <link rel="bookmark" type="image/x-icon" href="~/favicon.ico" />
    <link href="@Url.Content("~/Scripts/ext-4.2.1/theme/css/ext-all-neptune.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/themes/ux/all.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/themes/css/global.css")" rel="stylesheet" type="text/css" />
    @RenderSection("head", required: false)
</head>
<body style="display:none;">
    <div id="top-nav-panel" class="header">
        <div class="header-content">
            <div class="brand"></div>
            <div class="top-nav">
                <ul class="icon-nav">
                    <li>
                        <a href="/Home" target="_self" title="系统主页" class="@(ViewBag.BarIndex != null && ViewBag.BarIndex == 0 ? "current" : "")">
                            <span class="iconfont icon-home" aria-hidden="true"></span>
                        </a>
                    </li>
                    <li>
                        <a href="/Home/ActiveData" target="_self" title="实时数据" class="@(ViewBag.BarIndex != null && ViewBag.BarIndex == 1 ? "current" : "")">
                            <span class="iconfont icon-gauge" aria-hidden="true"></span>
                        </a>
                    </li>
                    <li>
                        <a href="/Home/ActiveAlarm" target="_self" title="实时告警" class="@(ViewBag.BarIndex != null && ViewBag.BarIndex == 2 ? "current" : "")">
                            <span class="iconfont icon-alarm" aria-hidden="true"></span>
                            <span id="actAlmCount" class="label" style="display:none">0</span>
                        </a>
                    </li>
                    <li>
                        <a href="/Home/HistoryData" target="_self" title="历史测值" class="@(ViewBag.BarIndex != null && ViewBag.BarIndex == 3 ? "current" : "")">
                            <span class="iconfont icon-report" aria-hidden="true"></span>
                        </a>
                    </li>
                    <li>
                        <a href="/Home/HistoryAlarm" target="_self" title="历时告警" class="@(ViewBag.BarIndex != null && ViewBag.BarIndex == 4 ? "current" : "")">
                            <span class="iconfont icon-pie" aria-hidden="true"></span>
                        </a>
                    </li>
                    <li>
                        <a href="/Home/Statistics" target="_self" title="统计曲线" class="@(ViewBag.BarIndex != null && ViewBag.BarIndex == 5 ? "current" : "")">
                            <span class="iconfont icon-process" aria-hidden="true"></span>
                        </a>
                    </li>
                    <li>
                        <a href="/Home/Configure" target="_self" title="图形组态" class="@(ViewBag.BarIndex != null && ViewBag.BarIndex == 6 ? "current" : "")">
                            <span class="iconfont icon-zutai" aria-hidden="true"></span>
                        </a>
                    </li>
                    <li>
                        <a href="/Home/Map" target="_self" title="电子地图" class="@(ViewBag.BarIndex != null && ViewBag.BarIndex == 7 ? "current" : "")">
                            <span class="iconfont icon-map" aria-hidden="true"></span>
                        </a>
                    </li>
                    <li>
                        <a href="/Account/LogOut" target="_self" title="安全退出">
                            <span class="iconfont icon-exit" aria-hidden="true"></span>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div id="page-body-content">
        @RenderBody()
    </div>
    <div id="center-content-panel"></div>

    <script type="text/javascript">
        if (typeof window.$$Rcms === 'undefined' || typeof window.$$Rcms !== 'object')
            window.$$Rcms = {};

        window.$$Rcms.__PYLON__4XtnBeCZz97O0PzX__ = '@System.Configuration.ConfigurationManager.AppSettings["HideTopBar"]';
    </script>

    <!-- Placed at the end of the document so the pages load faster -->
    <script src="@Url.Content("~/Scripts/ext-4.2.1/ext-all.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/ext-4.2.1/locale/ext-lang-cn.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/My97DatePicker/WdatePicker.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/all.js")" type="text/javascript"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
